<language>
    
    <!-- #################################### -->
    <!-- Settings module language definitions -->
    <!-- #################################### -->
    
    <display_name>Chatrooms</display_name>
    <icon>fa-commenting-o</icon>
    <description>
        Chatrooms for BardCanvas
    </description>
    
    <messages>
        <chat_name_missing>Chat name missing</chat_name_missing>
        <chat_unexistent>Sorry, but the chat '%s' is not registered</chat_unexistent>
        <invalid_timestamp>The timestamp provided isn't valid</invalid_timestamp>
    </messages>
    
    <settings_data allow_admin_level="240">
        <title>Chatrooms</title>
        
        <specs key="chatrooms_registry">
            <title>Chatrooms Registry</title>
            <description><![CDATA[
                Specify a list of chatrooms, one per line, using the next syntax:<br><br>
                
                <code>name | description | min_level</code><br><br>
                
                Examples:<br><br>
                
                <code>Lobby   | Generic chat     |  10</code><br>
                <code>Authors | Only for authors | 100</code><br><br>
                
                You can temporarily disable any room by prepending its line with a <code>#</code>.
            ]]></description>
            <type>code</type>
        </specs>
        
    </settings_data>
    
</language>
